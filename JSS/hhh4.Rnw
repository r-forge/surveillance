    )
measlesFit0 <- hhh4(measlesWeserEms, measlesModel0)
summary(measlesFit0, idx2Exp=1:2, amplitudeShift=TRUE)
@ 

<<measles0_RI, fig.cap="Estimated random intercepts of the endemic component in \\code{measlesFit0}.">>=

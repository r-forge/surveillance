<<measlesFit0, cache=TRUE>>=
measlesModel0 <- list(
    ar = list(f = ~ 1),
    ne = list(f = ~ 1, weights = neighbourhood(measlesWeserEms) == 1),
    end = list(f = addSeason2formula(~0 + ri(type="iid"), S=1, period=52),
